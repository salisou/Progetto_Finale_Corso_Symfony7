                </ul>
                <div class="speed-menu">
                    {% if app.user %}
                        <a href="{{ path('app_account') }}">
                            <i data-feather="user"></i>
                            {{ app.user.lastname }}
                        </a>
                    {% else %}
                        <a href="{{ path('app_login') }}"> 
                            <i data-feather="log-in"></i>
                        </a>
                    {% endif %}
                    <a href=""><i data-feather="shopping-cart"></i></a>
