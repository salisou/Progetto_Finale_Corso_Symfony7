{% extends 'base.html.twig' %}

{% block title %}Login{% endblock %}

{% block body %}
    <div class="container my-5">
        <h1>Connessione</h1>

        {% if errore %}
            <div class="alert alert-danger">
                {{ errore.messagekey|trans(errore.messageData, 'security') }}
            </div>
        {% endif %}
        
        <form action="{{ path('app_login') }}" class="action" method="post">
            <label for="username">Email:</label>
            <input type="text" class="form-control" id="username" name="_username" value="{{ last_username }}">
        
            <label for="password">Password:</label>
            <input type="password" class="form-control" id="password" name="_password">
        
            <input type="hidden" name="_target_path" value="{{ path('app_home') }}"> 

            <button type="submit" class="btn btn-success mt-3">Accedi</button>
        </form>
        
        <br/>
        <p>Non hai un account? <a href="{{ path('app_register') }}">Crea uno!</a></p>
    </div>
{% endblock %}
